<% include ../partials/header %>
<div class="container">
    <div class="row">
    </div>
    <div class="row">
        <div class="w-100">
            <form action="/tasks" method="post">
                <div class="form-group">
                    <label for="taskTitle">Titel der Aufgabe</label>
                    <input class="form-control" id="taskTitle" type="text" name="name" placeholder="Taskname">
                </div>
                <div class="form-group">
                    <label for="taskProject">Projekt zur Aufgabe</label>
                    <input class="form-control" id="taskProject" type="text" name="projectname" placeholder="Projektname">
                </div>
                <div class="form-group">
                    <label for="taskContent">Inhalt</label>
                    <textarea class="form-control" id="taskContent" name="content" placeholder="Task Content" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/tasks">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>