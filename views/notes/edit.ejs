<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1>Edit <%= note.name %></h1>
    </div>
    <div class="row">
        <div class="w-100">
            <form action="/notes/<%= note._id %>/?_method=PUT" method="post">
                <div class="form-group">
                    <label for="noteTitle">Titel der Notiz</label>
                    <input class="form-control" id="noteTitle" type="text" name="note[name]" value="<%= note.name %>">
                </div>
                <div class="form-group">
                    <label for="noteTextEntry">Notiztext</label>
                    <textarea class="form-control" id="noteTextEntry" name="note[text]" rows="5"><%= note.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/notes">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>