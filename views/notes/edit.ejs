<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= note.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/notes/<%= note._id %>/?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="note[name]" value="<%= note.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="note[description]" value="<%= note.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>