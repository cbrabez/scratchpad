<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a new note</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/notes" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Taskname">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="text" placeholder="Note Content">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>